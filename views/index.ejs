<%- include('partials/head.ejs') %>

<body>

    <nav class="px-5 navbar navbar-expand-sm bg-dark navbar-dark">
        <img class="" src="/img/logo.svg" alt="Log tcs">
    </nav>

    <section class="pt-5 container">

        <div class="row">
            <h2 class="col">Suas máquinas</h2>
            <button data-bs-toggle="modal" data-bs-target="#add" class="col-2 btn btn-primary">ADD Máquina</button>
        </div>

        <div class="pt-3">
            <table class="table rounded">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Status</th>
                        <th>Editar</th>
                        <th>Excluir</th>
                    </tr>
                </thead>
                <tbody>

                    <% machine.forEach(machine => {%>
                    <tr>
                        <th> #<%= machine.id %> </th>

                        <th> <%= machine.name %> </th>

                        <th>
                            <% if(machine.status == 1){ %>
                                <div class="text-white text-center w-25 p-1 rounded bg-success">Ativado</div>
                            
                            <% }else{ %>
                                <div class="text-white text-center w-25 p-1 rounded bg-danger">Desativado</div>
                            <% } %>
                        </th>

                        <th>
                            <button data-bs-toggle="modal" data-bs-target="#edit<%= machine.id %> " class="btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                </svg>
                            </button>

                            <div class="modal" id="edit<%= machine.id %>">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2>Editar máquina #<%= machine.id %> </h2>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/edit" method="post">
                                                <div class="mb-3">
                                                    <label for="" class="form-label">
                                                        Nome da máquina
                                                    </label>
                                                    <input type="text" name="name" class="form-control"
                                                        value="<%= machine.name %> ">
                                                </div>
                                                <div class="mb-3">

                                                    <label for="selectStatus" class="form-label">Status da
                                                        máquina</label>
                                                    <select id="selectStatus" name="selectStatus" class="form-select">
                                                        <option value="ativado">Ativado</option>
                                                        <option value="desativado">Desativado</option>
                                                    </select>
                                                    <input type="hidden" name="id" value="<%= machine.id %> ">
                                                    <div class="d-flex justify-content-center">
                                                        <button class="mt-5 btn btn-primary "
                                                            type="submit">Editar</button>
                                                    </div>

                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </th>
                        <th>
                            <button data-bs-toggle="modal" data-bs-target="#delete<%= machine.id %>" class="btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                </svg>
                            </button>

                            <div class="modal" id="delete<%= machine.id %>">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2 class="text-center">Você realmente que excluir a máquina
                                                #<%= machine.id %></h2>
                                        </div>
                                        <div class="modal-body">
                                            <form class="d-flex justify-content-center" action="/delete" method="post">

                                                <input type="hidden" name="id" value="<%= machine.id %> ">
                                                <button type="button" data-bs-dismiss="modal"
                                                    class="w-25 p-3 my-2 mx-5 btn btn-success">Não</button>
                                                <button class="w-25 p-3 my-2 mx-5 btn btn-danger">Sim</button>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </th>

                    </tr>

                    <% }); %>

                </tbody>
            </table>
        </div>
    </section>

    <div class="modal" id="add">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Cadastrar uma máquina</h2>
                </div>
                <div class="modal-body">
                    <form action="/register" method="POST">
                        <div class="mb-3">
                            <label for="" class="form-label">
                                Nome da máquina
                            </label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="mb-3">

                            <label for="selectStatus" class="form-label">Status da máquina</label>
                            <select id="selectStatus" name="selectStatus" class="form-select">
                                <option value="ativado">Ativado</option>
                                <option value="desativado">Desativado</option>
                            </select>

                            <div class="d-flex justify-content-center">
                                <button class="mt-5 btn btn-primary " type="submit">Cadastrar</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>







</body>

<%- include('partials/footer.ejs') %>